{
    "compilerOptions": {
        "module": "amd",
        "sourceMap": false,
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}